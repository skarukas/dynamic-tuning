{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*", "index.ts"
    ]
}